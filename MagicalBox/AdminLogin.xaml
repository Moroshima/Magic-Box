<Window x:Class="MagicalBox.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagicalBox"
        mc:Ignorable="d"
        Title="AdminLogin" Height="200" Width="400">
    <Grid Margin="0,0,0,0">
        <TextBox Name="usernameTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Margin="141,40,0,0"/>
        <PasswordBox Name="passwordTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Margin="141,70,0,0"/>
        <Label Content="管理员账号" HorizontalAlignment="Left" Margin="66,36,0,0" VerticalAlignment="Top"/>
        <Label Content="管理员密码" HorizontalAlignment="Left" Margin="66,66,0,0" VerticalAlignment="Top"/>
        <Button Content="登录" Click="Button_Click" HorizontalAlignment="Left" Margin="76,107,0,0" VerticalAlignment="Top" Height="23" Width="70"/>
        <Button Content="返回" Click="Back_Button_Click" HorizontalAlignment="Left" Margin="160,107,0,0" VerticalAlignment="Top" Height="23" Width="70"/>
        <Button Content="注册" Click="Admin_Reg_Button_Click" HorizontalAlignment="Left" Margin="244,107,0,0" VerticalAlignment="Top" Height="23" Width="70"/>
    </Grid>
</Window>
